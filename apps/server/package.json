{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "hono": "^4.9.10",
    "@trpc/server": "^11.6.0",
    "@hono/trpc-server": "^0.4.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12",
    "@template-app/api": "workspace:*",
    "@template-app/auth": "workspace:*",
    "@template-app/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/bun": "^1.2.23",
    "tsdown": "^0.15.6"
  }
}
