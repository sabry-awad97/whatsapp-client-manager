  "devDependencies": {
    "prisma": "6.16.3",
    "tsdown": "0.15.6"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@prisma/client": "6.16.3",
    "dotenv": "17.2.3",
    "zod": "^4.1.12"
  }
}
